		            android:onClick="updateOxygenationSubtext"
		            android:text="@string/oxygenation2" />
		        
		        <RadioButton
		            android:id="@+id/oxygenation3"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:onClick="updateOxygenationSubtext"
		            android:text="@string/oxygenation3" />
		        
		        <RadioButton
		            android:id="@+id/oxygenation4"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:onClick="updateOxygenationSubtext"
		            android:text="@string/oxygenation4" />
	 
	    	</RadioGroup>
        </com.me.pulcer.widget.AccordionView>
        
        </ScrollView>
        
        <Button
            android:id="@+id/submitBraden"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:onClick="submitBraden"
            android:text="@string/submit" />

</LinearLayout>
