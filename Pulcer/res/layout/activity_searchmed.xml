<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Searchmed" >
    
    <Button
        android:id="@+id/btnUlcerBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Back" />

    <TextView
        android:id="@+id/lblAgreement"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/btnUlcerBack"
        android:gravity="center"
        android:text="Search Medication"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ListView
        android:id="@+id/lvUlcers"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_above="@+id/btnUlcerBack"
        android:layout_centerHorizontal="true" >
    </ListView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lvUlcers"
        android:layout_alignLeft="@+id/lvUlcers"
        android:gravity="center"
        android:text="Search Results"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btnAddDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edit_message"
        android:layout_alignBottom="@+id/edit_message"
        android:layout_alignParentRight="true"
        android:text="Search" />

    <EditText
        android:id="@+id/edit_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblAgreement"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/btnAddDate"
        android:ems="10"
        android:hint="medication name" />

</RelativeLayout>