		            android:onClick="updateMobilitySubtext"
		            android:text="@string/mobility3" />
		        
		        <RadioButton
		            android:id="@+id/mobility4"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:onClick="updateMobilitySubtext"
		            android:text="@string/mobility4" />
	 
	    	</RadioGroup>

            <RadioGroup
		        android:id="@+id/radioNutrition"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" >
 
		        <RadioButton
		            android:id="@+id/nutrition1"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:onClick="updateNutritionSubtext"
		            android:text="@string/nutrition1" />
		 
		        <RadioButton
		            android:id="@+id/nutrition2"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:onClick="updateNutritionSubtext"
		            android:text="@string/nutrition2" />
		        
		        <RadioButton
		            android:id="@+id/nutrition3"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:onClick="updateNutritionSubtext"
		            android:text="@string/nutrition3" />
		        
		        <RadioButton
		            android:id="@+id/nutrition4"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:onClick="updateNutritionSubtext"
		            android:text="@string/nutrition4" />
	 
	    	</RadioGroup>
	    	
            <RadioGroup
		        android:id="@+id/radioFriction"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" >
 
		        <RadioButton
		            android:id="@+id/friction1"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:onClick="updateFrictionSubtext"
		            android:text="@string/friction1" />
		 
		        <RadioButton
		            android:id="@+id/friction2"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:onClick="updateFrictionSubtext"
		            android:text="@string/friction2" />
		        
		        <RadioButton
		            android:id="@+id/friction3"
