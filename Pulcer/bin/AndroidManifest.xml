<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pulcer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="10" />

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BROADCAST_STICKY" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <application
        android:name="com.me.pulcer.common.PApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <meta-data
            android:name="Hadi_DB_NAME"
            android:value="Pulcer.db" />
        <meta-data
            android:name="Hadi_DB_VERSION"
            android:value="1" />
        
        <activity
            android:name="com.example.pulcer.Launcher"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.pulcer.Settings"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.me.pulcer.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.example.pulcer.Login"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.pulcer.Dashboard"
            android:label="@string/title_activity_dashboard" >
        </activity>
        <activity
            android:name="com.example.pulcer.Register"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.example.pulcer.Searchmed"
            android:label="@string/title_activity_searchmed" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.searchmed" />
        </activity>
        <activity
            android:name="com.example.pulcer.UserAgreement"
            android:label="@string/title_activity_useragreement" >
        </activity>
        <activity
            android:name="com.example.pulcer.Ulcer"
            android:label="@string/title_activity_ulcer" >
        </activity>
        <activity
            android:name="com.example.pulcer.BradenSurvey"
            android:label="@string/title_activity_survey" >
        </activity>
        <activity
            android:name="com.example.pulcer.CameraCap"
            android:label="@string/title_activity_survey"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>